<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	version="6.0">
	
	<display-name>Project_TIW_RIA</display-name>
	
	<!-- 400: Bad Request (e.g., malformed input) -->
	<error-page>
	    <error-code>400</error-code>
	    <location>/error</location>
	</error-page>
	
	<!-- 403: Forbidden (e.g., restricted content) -->
	<error-page>
	    <error-code>403</error-code>
	    <location>/error</location>
	</error-page>
	
	<!-- 404: Not Found (e.g., bad URL or missing resource) -->
	<error-page>
	    <error-code>404</error-code>
	    <location>/error</location>
	</error-page>
	
	<!-- 405: Method Not Allowed (e.g., GET on a POST-only servlet) -->
	<error-page>
	    <error-code>405</error-code>
	    <location>/error</location>
	</error-page>
	
	<!-- 500: Internal Server Error (e.g., SQLException, null pointer) -->
	<error-page>
	    <error-code>500</error-code>
	    <location>/error</location>
	</error-page>
	
	<!-- Fallback for unhandled exceptions -->
	<error-page>
	    <exception-type>java.lang.Throwable</exception-type>
	    <location>/error</location>
	</error-page>

</web-app>